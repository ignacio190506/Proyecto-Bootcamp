<Window x:Class="FInal.Información"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FInal"
        mc:Ignorable="d"
        Title="Información" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="44" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Cursor="None">
            <Button.Background>
                <ImageBrush ImageSource="/WhatsApp Image 2025-11-21 at 21.52.11.jpeg"/>
            </Button.Background>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="58" Margin="37,87,0,0" Stroke="Black" VerticalAlignment="Top" Width="232"/>
        <Label Content="¿Cual es el propósito?&#xA;" HorizontalAlignment="Left" Margin="37,94,0,0" VerticalAlignment="Top" Width="232" Height="58" FontSize="26" FontFamily="Tw Cen MT Condensed Extra Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="58" Margin="37,197,0,0" Stroke="Black" VerticalAlignment="Top" Width="232"/>
        <Label Content="¿Que ofrecemos?" HorizontalAlignment="Left" Margin="56,201,0,0" VerticalAlignment="Top" Width="181" Height="58" FontSize="26" FontFamily="Tw Cen MT Condensed Extra Bold"/>
        <Label x:Name="Proposito" Content="Nuestro propósito es poder hacer visible algo tan importante como es&#xD;&#xA;el aire y su contaminación sobre diferentes lugares" HorizontalAlignment="Left" Height="50" Margin="347,91,0,0" VerticalAlignment="Top" Width="432" FontFamily="Bahnschrift SemiBold" Visibility="Hidden" FontSize="14"/>
        <Label x:Name="Hicimos" Content="Lo que hicimos: De diferentes datos sobre lugares los tomamos, &#xD;&#xA;calculamos y clasificamos para presentarlos en pantalla" HorizontalAlignment="Left" Height="54" Margin="347,311,0,0" VerticalAlignment="Top" Width="415" FontFamily="Bahnschrift SemiBold" Visibility="Hidden" FontSize="14"/>
        <Rectangle HorizontalAlignment="Left" Height="58" Margin="37,307,0,0" Stroke="Black" VerticalAlignment="Top" Width="232"/>
        <Label Content="¿Como lo hicimos?&#xA;" HorizontalAlignment="Left" Margin="52,318,0,0" VerticalAlignment="Top" Width="210" Height="58" FontSize="26" FontFamily="Tw Cen MT Condensed Extra Bold"/>
        <Button x:Name="btn_proposito" Content="Button" HorizontalAlignment="Left" Height="42" Margin="286,95,0,0" VerticalAlignment="Top" Width="46" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="btn_proposito_Click">
            <Button.Background>
                <ImageBrush ImageSource="/next-button_11215775.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_ofrecemos" Content="Button" HorizontalAlignment="Left" Height="42" Margin="286,205,0,0" VerticalAlignment="Top" Width="46" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="btn_ofrecemos_Click">
            <Button.Background>
                <ImageBrush ImageSource="/next-button_11215775.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_hicimos" Content="Button" HorizontalAlignment="Left" Height="42" Margin="286,315,0,0" VerticalAlignment="Top" Width="46" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="btn_hicimos_Click">
            <Button.Background>
                <ImageBrush ImageSource="/next-button_11215775.png"/>
            </Button.Background>
        </Button>
        <Label x:Name="Ofrecemos" Content="Lo que ofrecemos: Ponemos a disposición del usuario información &#xD;&#xA;de calidad como el ICA CO2 y otros de forma visible y ordenada" HorizontalAlignment="Left" Height="50" Margin="347,201,0,0" VerticalAlignment="Top" Width="443" FontFamily="Bahnschrift SemiBold" Visibility="Hidden" FontSize="14"/>
    </Grid>
</Window>

